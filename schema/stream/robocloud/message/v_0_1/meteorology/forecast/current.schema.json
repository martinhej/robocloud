{
  "$schema": "http://robomaze.io/message/v_0_1/meteorology/forecast/current/schema#",
  "title": "Current weather forecast",
  "description": "",
  "type": "object",
  "properties": {
    "weather": {
      "description": "The expected weather description.",
      "type": "string"
    },
    "temperature": {
      "description": "The expected temperature.",
      "type": "object",
      "properties": {
        "value": {
          "description": "The air temperature.",
          "type": "int"
        },
        "unit": {
          "description": "The unit of the value.",
          "type": "string"
        }
      }
    },
    "wind": {
      "description": "The expected wind.",
      "type": "object",
      "properties": {
        "direction": {
          "description": "The wind direction.",
          "type": "string"
        },
        "speed": {
          "description": "The wind speed in km/h.",
          "type": "int"
        }
      }
    }
  },
  "required": ["weather"]
}